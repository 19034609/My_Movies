<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageViewRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rating_g" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Title" />

        <TextView
            android:id="@+id/textViewYearGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year n Genre" />

        <Space
            android:layout_height="20dp"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <Space
            android:layout_height="20dp"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/textViewWatchOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch on " />

        <TextView
            android:id="@+id/textViewInTheatre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In theatre" />

        <Space
            android:layout_height="20dp"
            android:layout_width="match_parent" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0" />
    </LinearLayout>
</LinearLayout>